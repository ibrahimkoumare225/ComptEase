<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="fr.koumare.comptease.fxml.Test"
            prefHeight="400.0" prefWidth="600.0">




                <GridPane layoutX="20" hgap="5" vgap="5" maxWidth="900.0" prefHeight="600" alignment="CENTER">
                                                    <columnConstraints>
                                                        <ColumnConstraints  hgrow="NEVER" minWidth="10.0" prefWidth="100.0" />
                                                        <ColumnConstraints  hgrow="NEVER" minWidth="10.0"  prefWidth="300.0" />
                                                        <ColumnConstraints  hgrow="NEVER" minWidth="10.0" prefWidth="100.0" />
                                                        <ColumnConstraints  hgrow="NEVER" minWidth="10.0" prefWidth="100.0" />
                                                        <ColumnConstraints  hgrow="NEVER" minWidth="10.0"  prefWidth="300.0" />
                                                    </columnConstraints>
                                                    <!-- Colonne 1 -->
                                                    <Label text="Nom de l'entreprise :" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                                                    <TextField fx:id="nomEntreprise" GridPane.rowIndex="0" GridPane.columnIndex="1" />

                                                    <Label text="Nom du créateur :" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                                                    <ChoiceBox fx:id="nomCreateur" GridPane.rowIndex="1" GridPane.columnIndex="1" />

                                                    <Label text="Forme juridique :" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                                                    <ChoiceBox fx:id="ChoiceFormeJuridique" GridPane.rowIndex="2" GridPane.columnIndex="1" />

                                                    <Label text="Régime fiscal :" GridPane.rowIndex="3" GridPane.columnIndex="0" />
                                                    <ChoiceBox fx:id="choiceRegime" GridPane.rowIndex="3" GridPane.columnIndex="1" />

                                                    <Label text="Activité :" GridPane.rowIndex="4" GridPane.columnIndex="0" />
                                                    <ChoiceBox fx:id="choiceActivite" GridPane.rowIndex="4" GridPane.columnIndex="1" />

                                                    <Label text="Profession :" GridPane.rowIndex="5" GridPane.columnIndex="0" />
                                                    <ChoiceBox fx:id="choiceProfession" GridPane.rowIndex="5" GridPane.columnIndex="1" />

                                                    <Label text="SIRET :" GridPane.rowIndex="6" GridPane.columnIndex="0" />
                                                    <TextField fx:id="siretField" GridPane.rowIndex="6" GridPane.columnIndex="1" />

                                                    <Label text="RIB :" GridPane.rowIndex="7" GridPane.columnIndex="0" />
                                                    <TextField fx:id="ribField" GridPane.rowIndex="7" GridPane.columnIndex="1" />
                                                    <!-- Colonne 2 -->
                                                    <Label text="TEST:" GridPane.rowIndex="0" GridPane.columnIndex="2" visible="false" />

                                                    <!-- Colonne 3 -->
                                                    <Label text="Capital social :" GridPane.rowIndex="0" GridPane.columnIndex="3" />
                                                    <TextField fx:id="capitalSocialField" GridPane.rowIndex="0" GridPane.columnIndex="4" />

                                                    <Label text="Numéro de TVA :" GridPane.rowIndex="1" GridPane.columnIndex="3" />
                                                    <TextField fx:id="tvaNumberField" GridPane.rowIndex="1" GridPane.columnIndex="4" />

                                                    <Label text="Adresse :" GridPane.rowIndex="2" GridPane.columnIndex="3" />
                                                    <TextField fx:id="addressField" GridPane.rowIndex="2" GridPane.columnIndex="3" />

                                                    <Label text="Téléphone :" GridPane.rowIndex="3" GridPane.columnIndex="3" />
                                                    <TextField fx:id="phoneField" GridPane.rowIndex="3" GridPane.columnIndex="4" />

                                                    <Label text="Email :" GridPane.rowIndex="4" GridPane.columnIndex="3" />
                                                    <TextField fx:id="emailField" GridPane.rowIndex="4" GridPane.columnIndex="4" />

                                                    <Label text="Date de création :" GridPane.rowIndex="5" GridPane.columnIndex="3" />
                                                    <DatePicker fx:id="dateCreation" GridPane.rowIndex="5" GridPane.columnIndex="4" />

                                                    <Label text="Clôture comptable :" GridPane.rowIndex="6" GridPane.columnIndex="3" />
                                                    <DatePicker fx:id="dateCloture" GridPane.rowIndex="6" GridPane.columnIndex="4" />

                                                    <!-- Bouton Modifier -->
                                                </GridPane>

</AnchorPane>
